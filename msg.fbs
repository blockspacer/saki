union Any {
  Query,
  Auth,
  AuthRes
}

enum AuthType: byte {
  unauthenticated = 0,
  login,
  signup,
  token,
}

table Query {
  collection: string;
}

table Auth {
  type: AuthType = unauthenticated;
  username: string;
  password: string;
  token: string;
}

table AuthRes {
  username: string;
  token: string;
  error: string;
}

table Base {
  msg: Any;
  user: string;
  request_id: uint32;
}

root_type Base;
